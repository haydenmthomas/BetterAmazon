@model IEnumerable<string>

<a class="btn btn-block btn-sm btn-secondary"
   asp-action="Index"
   asp-controller="Home"
   asp-route-category="">
    Home
</a>

@foreach (string category in Model)
{
    //Sets up the menu for filtering
    <a class="btn btn-block btn-sm @(category == ViewBag.SelectedCategory ? "btn-warning" : "btn-secondary")"
       asp-action="Index"
       asp-controller="Home"
       asp-route-category="@category"
       asp-route-page="1">
        @category
    </a>
}