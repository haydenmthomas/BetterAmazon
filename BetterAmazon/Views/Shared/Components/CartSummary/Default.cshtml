@model Cart

@*This view is the default view for using the cart button on the pages.*@
<div class="">
    @if (Model.Lines.Count() > 0)
            {
                <small class"navbar-text">
                    <b>Your Cart:</b>
                    @Model.Lines.Sum(x => x.Quantity) items(s) 
                    $@Model.ComputeTotalSum().ToString()
                </small>
            }
     <a class="btn btn-secondary navbar-btn" asp-page="/Purchase"
        asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
         <i class="fa fa-shopping-cart"></i>
     </a>
</div>
