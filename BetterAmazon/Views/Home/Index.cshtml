@{
    ViewData["Title"] = "Home Page";
}

@model ProjectListViewModel

<div page-model="@Model.PagingInfo" page-action="Index"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-warning"
     class="btn-group pull-right m-1"></div>

<div class="text-left">
    <!--Bootstrap table-->
            @foreach (var x in Model.Books)
            {
                <div class="card m-3">
                    <h5 class="card-header text-info">@x.Title - @x.AuthorFirstName @x.AuthorLastName</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <h5 class="card-title">@x.Title</h5>
                                <p>Publisher: @x.Publisher</p>
                                <p>ISBN: @x.ISBN</p>
                            </div>
                            <div class="col-6">
                                <p>Category: @x.Category</p>
                                <p>Number of Pages: @x.NumPages</p>
                                <p>Price: $@x.Price</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
</div>

<div page-model="@Model.PagingInfo" page-action="Index"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-warning"
     class="btn-group pull-right m-1"></div>
